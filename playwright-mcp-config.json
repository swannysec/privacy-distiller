{
  "browser": {
    "browserName": "chromium",
    "launchOptions": {
      "headless": false,
      "args": [
        "--no-sandbox",
        "--disable-web-security",
        "--disable-features=IsolateOrigins,site-per-process"
      ]
    },
    "contextOptions": {
      "ignoreHTTPSErrors": true,
      "viewport": { "width": 1280, "height": 720 }
    }
  },
  "network": {
    "allowedOrigins": [
      "http://localhost:*",
      "http://127.0.0.1:*",
      "http://0.0.0.0:*"
    ]
  },
  "timeouts": {
    "action": 10000,
    "navigation": 60000
  }
}
